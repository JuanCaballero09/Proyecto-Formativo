<% resource_name ||= :user %>
<% resource     ||= User.new %>
<% devise_mapping ||= Devise.mappings[:user] %>


<section class="login-background">
  <div class="left-side">
    <div class="session-header">
      <%= image_tag "LogoLogo.svg" %>
      <h1>Bitevia Software</h1>
    </div>

      <footer class="session-footer">
      <div class="social">
        <a href="#">
          <%= image_tag "icons/instagram-brands.svg" %>
        </a>
        <a href="#">
          <%= image_tag "icons/whatsapp-brands.svg" %>
        </a>
        <a href="#">
          <%= image_tag "icons/tiktok-brands.svg" %>
        </a>
      </div>
      <p>¬© 2025 Bitevia Software. Todos los derechos reservados.</p>

    </footer>
  </div>
  
  <div class="right-side">

    <p class="return-btn"><%= link_to "‚Üê Volver al inicio", root_path %></p>

    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert alert-info"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:error] %>
      <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>
    <div class="session-form">
      <h2>Iniciar Sesi√≥n</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: false, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <div class="password-container">
            <%= f.password_field :password, autocomplete: "current-password", id: "password-field" %>
          </div>
          <input type="checkbox" class="password-toggle" onclick="togglePassword()" aria-label="Mostrar contrase√±a">
          <span id="eye-icon"> Mostrar contrase√±a</span>
          <div style="margin-bottom: 20px"></div>
        </div>

        <div class="actions">
          <%= f.submit "Iniciar Sesi√≥n" %>
        </div>
      <% end %>

      <p style="margin: 10px;"><%= link_to "Registrarse", new_registration_path(resource_name) %></p>
      <hr>
      <p>¬øNo te ha llegado el correo de confirmaci√≥n? <br> <%= link_to "Reenviar confirmaci√≥n", new_confirmation_path(resource_name), style: "font-weight: 500;"%></p>
      <p>¬øOlvidaste tu contrase√±a? <br> <%= link_to "Recuperar contrase√±a", new_password_path(resource_name), style: "font-weight: 500;"%></p>
    </div>

  </div>

</section>

<script>
  // ========================================
  // üëÅÔ∏è Mostrar o ocultar contrase√±a
  // ========================================

  document.addEventListener('DOMContentLoaded', function() {
    const toggleButton = document.querySelector('.password-toggle');
    if (toggleButton) {
      toggleButton.checked = false;
    }
  });

  function togglePassword() {
    const passwordField = document.getElementById('password-field');
    const eyeIcon = document.getElementById('eye-icon');
    const toggleButton = document.querySelector('.password-toggle');
    
    if (passwordField.type === 'password') {
      passwordField.type = 'text';
      eyeIcon.textContent = ' Ocultar contrase√±a';
      toggleButton.setAttribute('aria-label', 'Ocultar contrase√±a');
    } else {
      passwordField.type = 'password';
      eyeIcon.textContent = ' Mostrar contrase√±a';
      toggleButton.setAttribute('aria-label', 'Mostrar contrase√±a');
    }
  }
</script>