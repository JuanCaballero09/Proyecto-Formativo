<section class="login-background">
  <div class="left-side">
    <header class="session-header">
      <%= image_tag "LogoLogo.svg" %>
      <h1>Bitevia Software</h1>
    </header>
    <footer class="session-footer">
      <div class="social">
        <a href="#">
          <%= image_tag "icons/instagram-brands.svg" %>
        </a>
        <a href="#">
          <%= image_tag "icons/whatsapp-brands.svg" %>
        </a>
        <a href="#">
          <%= image_tag "icons/tiktok-brands.svg" %>
        </a>
      </div>
      <p>¬© 2025 Bitevia Software. Todos los derechos reservados.</p>
    </footer>
  </div>
  <div class="right-side">
    <p class="return-btn"><%= link_to "‚Üê Volver al inicio", root_path %></p>
    <div class="session-form">
      <h2>Cambia la contrase√±a</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "Nueva Contrase√±a" %><br />
        <% if @minimum_password_length %>
          <em>(minimo <%= @minimum_password_length %> caracteres)</em><br><br>
        <% end %>
        <%= f.password_field :password, autofocus: false, autocomplete: "new-password", id: "password-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmar Contrase√±a" %><br />
        <%= f.password_field :password_confirmation, id: "password-field2" %>
      </div>

      <br>
      <input type="checkbox" class="password-toggle" onclick="togglePassword()" aria-label="Mostrar contrase√±a">
      <span id="eye-icon"> Mostrar contrase√±a</span>
      <div style="margin-bottom: 20px"></div>

      <div class="actions">
        <%= f.submit "Cambiar Contrase√±a" %>
      </div>
      <% end %>
    </div>
  </div>
</section>

<script>
  // ========================================
  // üëÅÔ∏è Mostrar o ocultar contrase√±a
  // ========================================
  document.addEventListener('DOMContentLoaded', function() {
    const toggleButton = document.querySelector('.password-toggle');
    if (toggleButton) {
      toggleButton.checked = false;
    }
  });

  function togglePassword() {
    const passwordField = document.getElementById('password-field');
    const passwordField2 = document.getElementById('password-field2');
    const eyeIcon = document.getElementById('eye-icon');
    const toggleButton = document.querySelector('.password-toggle');
    
    if (passwordField.type === 'password') {
      passwordField.type = 'text';
      passwordField2.type = 'text';
      eyeIcon.textContent = ' Ocultar contrase√±a';
      toggleButton.setAttribute('aria-label', 'Ocultar contrase√±a');

    } else {
      passwordField.type = 'password';
      passwordField2.type = 'password';
      eyeIcon.textContent = ' Mostrar contrase√±a';
      toggleButton.setAttribute('aria-label', 'Mostrar contrase√±a');
    }
  }
</script>