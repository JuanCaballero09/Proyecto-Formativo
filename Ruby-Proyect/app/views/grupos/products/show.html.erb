<section class="producto">
  <aside class="producto-aside">
    <% if @product.imagen.attached? %>
      <%= image_tag(@product.imagen, alt: @product.nombre ) %>
    <% else %>
      <%= image_tag('LogoLogoText2.svg', alt: 'Producto sin imagen') %>
    <% end %>

    <div>
      <h2>Calificación</h2>
      <p>&starf;&starf;&starf;&starf;&star; </p>
    </div>

    <div class="botones-compra">
      <%= button_to t("home.section.agregar_carrito"), carrito_items_path(product_id: @product.id), method: :post, data: { turbo_frame: "_top" } %>
    </div>

  </aside>
  <article class="producto-vista">
    <div class="producto-detalles">
      <div class="producto-info">
        <h1><%= @product.nombre %></h1>
        <p><%= @product.descripcion %></p>

        <div>
          <h3>Precio</h3>
          <p>$<%= @product.precio %></p>
        </div>

        <div>
          <h3>Ingredientes</h3>
          <ul>
            <% @product.ingredientes.each do |ingrediente| %>
              <li><%= ingrediente.nombre %></li>
            <% end %>
          </ul>
        </div>

        <div>
          <h3>Categoría</h3>
          <p><%= @product.grupo.nombre %></p>
        </div>
      </div>

      <div class="producto-comentarios">
        <h3>Opiniones</h3>
        <ul>
          <li>“Muy rica y jugosa” – Ana</li>
          <li>“Me encantó la combinación” – Luis</li>
        </ul>
      </div>


    </div>

  </article>

</section>