  <script>
  (function() {
    console.log('üöÄ Script cargado');
    
    const paymentMethodSelector = document.getElementById('payment-method-selector');
    const paymentMethodSelection = document.getElementById('payment-method-selection');
    const cardTypeSelection = document.getElementById('card-type-selection');
    const paymentFormSection = document.getElementById('payment-form-section');
    const cardFields = document.getElementById('card-fields');
    const nequiFields = document.getElementById('nequi-fields');
    const installmentsField = document.getElementById('installments-field');
    const cardTypeSelector = document.getElementById('card-type-selector');
    const form = document.getElementById('payment-form');
    const payBtn = document.getElementById('pay-btn');
    const acceptTerms = document.querySelector('input[name*="accept_terms"]');
    const acceptData = document.querySelector('input[name*="accept_data"]');
    const emailInput = document.querySelector('input[name*="email"]');
    
    // Campos de tarjeta
    const cardNumberInput = document.querySelector('input[name*="card_number"]');
    const expMonthSelect = document.querySelector('select[name*="exp_month"]');
    const expYearSelect = document.querySelector('select[name*="exp_year"]');
    const cvcInput = document.querySelector('input[name*="cvc"]');
    const cardHolderInput = document.querySelector('input[name*="card_holder"]');
    const installmentsSelect = document.querySelector('select[name*="installments"]');
    
    // Campo de Nequi
    const phoneInput = document.querySelector('input[name*="phone_number"]');

    function showStep(stepElement) {
      [paymentMethodSelection, cardTypeSelection, paymentFormSection].forEach(el => {
        if (el) el.style.display = 'none';
      });
      if (stepElement) stepElement.style.display = 'block';
      validateAndEnableButton();
    }

    // Validaci√≥n inteligente seg√∫n m√©todo de pago
    function validateAndEnableButton() {
      const method = paymentMethodSelector.value;
      const terms = acceptTerms && acceptTerms.checked;
      const data = acceptData && acceptData.checked;
      const email = emailInput && emailInput.value && emailInput.value.includes('@');
      
      console.log('üîç Validando...', { method, terms, data, email });

      // SIEMPRE se requieren t√©rminos y condiciones
      if (!terms || !data) {
        console.log('‚ùå Faltan t√©rminos');
        disableButton();
        return;
      }

      // SIEMPRE se requiere email
      if (!email) {
        console.log('‚ùå Email inv√°lido');
        disableButton();
        return;
      }

      // Validaci√≥n espec√≠fica por m√©todo
      let isValid = false;

      if (method === 'cash') {
        // Efectivo: solo email y t√©rminos (ya validados arriba)
        console.log('‚úÖ Cash - v√°lido');
        isValid = true;
        
      } else if (method === 'nequi') {
        // Nequi: email, t√©rminos y tel√©fono
        const phone = phoneInput && phoneInput.value;
        isValid = phone && phone.length === 10 && phone.startsWith('3');
        console.log('üí∞ Nequi v√°lido:', isValid, phone);
        
      } else if (method === 'card') {
        // Tarjeta: todos los campos de tarjeta
        const cardType = cardTypeSelector.value;
        const cardNumber = cardNumberInput && cardNumberInput.value.replace(/\s/g, '');
        const expMonth = expMonthSelect && expMonthSelect.value;
        const expYear = expYearSelect && expYearSelect.value;
        const cvc = cvcInput && cvcInput.value;
        const cardHolder = cardHolderInput && cardHolderInput.value;
        
        isValid = cardType && 
                  cardNumber && cardNumber.length >= 13 && cardNumber.length <= 19 &&
                  expMonth && expYear && 
                  cvc && cvc.length >= 3 && 
                  cardHolder && cardHolder.trim().length > 0;
        
        console.log('üí≥ Card v√°lido:', isValid, { cardType, cardNumber: cardNumber?.length, expMonth, expYear, cvc: cvc?.length, cardHolder: !!cardHolder });
      }

      if (isValid) {
        enableButton();
      } else {
        disableButton();
      }
    }

    function enableButton() {
      if (payBtn) {
        payBtn.disabled = false;
        payBtn.style.opacity = '1';
        payBtn.style.cursor = 'pointer';
        console.log('‚úÖ Bot√≥n habilitado');
      }
    }

    function disableButton() {
      if (payBtn) {
        payBtn.disabled = true;
        payBtn.style.opacity = '0.5';
        payBtn.style.cursor = 'not-allowed';
        console.log('üö´ Bot√≥n deshabilitado');
      }
    }

    function handlePaymentMethodClick(e) {
      const card = e.currentTarget;
      const method = card.dataset.method;
      console.log('üí≥ M√©todo seleccionado:', method);
      paymentMethodSelector.value = method;
      
      if (method === 'card') {
        showStep(cardTypeSelection);
      } else {
        cardFields.style.display = 'none';
        nequiFields.style.display = method === 'nequi' ? 'block' : 'none';
        showStep(paymentFormSection);
      }
    }

    function handleCardTypeClick(e) {
      const card = e.currentTarget;
      const cardType = card.dataset.cardType;
      console.log('üé¥ Tipo de tarjeta:', cardType);
      cardTypeSelector.value = cardType;
      
      // D√©bito = 1 cuota autom√°tica, Cr√©dito = mostrar selector
      if (cardType === 'debit') {
        installmentsField.style.display = 'none';
        if (installmentsSelect) installmentsSelect.value = '1';
      } else {
        installmentsField.style.display = 'block';
      }
      
      cardFields.style.display = 'block';
      nequiFields.style.display = 'none';
      showStep(paymentFormSection);
    }

    function handleBackButtonClick(e) {
