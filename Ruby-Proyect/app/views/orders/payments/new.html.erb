    // Selecci√≥n de m√©todo de pago
    document.querySelectorAll('.payment-method-card[data-method]').forEach(card => {
      card.addEventListener('click', handlePaymentMethodClick);
    });

    // Selecci√≥n de tipo de tarjeta
    document.querySelectorAll('.payment-method-card[data-card-type]').forEach(card => {
      card.addEventListener('click', handleCardTypeClick);
    });

    // Botones de volver
    document.querySelectorAll('.back-button[data-back-to]').forEach(btn => {
      btn.addEventListener('click', handleBackButtonClick);
    });

    const backFromFormBtn = document.getElementById('back-from-form');
    if (backFromFormBtn) {
      backFromFormBtn.addEventListener('click', handleBackFromForm);
    }

    // Listeners para validaci√≥n en tiempo real
    [acceptTerms, acceptData, emailInput, phoneInput, cardNumberInput, 
     expMonthSelect, expYearSelect, cvcInput, cardHolderInput].forEach(el => {
      if (el) {
        el.addEventListener('change', validateAndEnableButton);
        el.addEventListener('input', validateAndEnableButton);
      }
    });

    // Validaci√≥n final en submit
    if (form) {
      form.addEventListener('submit', handleFormSubmit);
    }

    showStep(paymentMethodSelection);
    disableButton(); // Inicialmente deshabilitado
