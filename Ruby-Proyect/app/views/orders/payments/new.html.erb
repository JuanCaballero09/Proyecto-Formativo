    function handleBackFromForm() {
      showStep(paymentMethodSelector.value === 'card' ? cardTypeSelection : paymentMethodSelection);
    }

    function handleFormSubmit(e) {
      console.log('üìù Formulario enviado');
      
      const method = paymentMethodSelector.value;
      const email = emailInput ? emailInput.value : '';
      const terms = acceptTerms ? acceptTerms.checked : false;
      const data = acceptData ? acceptData.checked : false;

      if (!method) {
        console.log('‚ùå Falta m√©todo de pago');
        e.preventDefault();
        alert('Por favor selecciona un m√©todo de pago');
