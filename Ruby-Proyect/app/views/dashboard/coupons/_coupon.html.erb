<tr id="coupon-row-<%= coupon.id %>">
  <td><%= coupon.codigo %></td>
  <td class="coupon-tipo"><%= coupon.tipo_descuento %></td>
  <td class="coupon-valor"><%= coupon.valor %></td>
  <td><%= l(coupon.expira_en, format: "%d/%m/%Y %H:%M") %></td>
  <td><%= coupon.activo? ? "Activo" : "Inactivo" %></td>
  <td>
    <% if coupon.activo? %>
      <%= link_to t("home.cupones.desactivar"), toggle_activo_dashboard_coupon_path(coupon),
                  data: { turbo_method: :patch }, class: "btn btn-warning" %>
    <% else %>
      <%= link_to t("home.cupones.activar"), toggle_activo_dashboard_coupon_path(coupon),
                  data: { turbo_method: :patch }, class: "btn btn-primary" %>
    <% end %>
  </td>
  <td style="display: flex; gap: 6px; justify-content: center;">
    <%= link_to t("home.cupones.ver"), dashboard_coupon_path(coupon), class: 'btn btn-info' %>
    <%= link_to t("home.cupones.editar"), edit_dashboard_coupon_path(coupon), class: 'btn btn-secondary' %>
    <%= link_to t("home.cupones.eliminar"), dashboard_coupon_path(coupon),
                data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro?' },
                class: 'btn btn-danger' %>
  </td>
</tr>
