<section>
    <h2>Imágenes Montadas</h2>

    <%= link_to "Subir Imagen Nueva", new_dashboard_banner_path, class: "btn-aggr" %>
    <br>

    <% if @banners.any? %>
        <section class="productss">
            <% @banners.each do |banner| %>
                <div class="banner">
                    <% if banner.imagen.attached? %>
                        <%= image_tag(banner.imagen) %>
                        <%= button_to 'Eliminar', dashboard_banner_path(banner), method: :delete, class: "btn-eliminar", style: "margin: 15px auto; display: flex;" %>
                    <% else %>
                        <p>⚠️ Esta imagen no está adjunta</p>
                        <%= button_to 'Eliminar', dashboard_banner_path(banner), method: :delete, class: "btn-eliminar", style: "margin: 15px auto; display: flex;" %>
                    <% end %>
                </div>  
            <% end %>
        </section>
    <% else %>
        <div style="text-align: center; margin-top: 20px; color: gray;">
            No hay imágenes montadas.
        </div>
    <% end %>
</section>