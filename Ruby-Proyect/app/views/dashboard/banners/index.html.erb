<h1>Agregar Imagen nueva</h1>

<%= form_with model: @banner, url: dashboard_banners_path, local: true, multipart: true do |f| %>
    <%= f.title_field :image %>
    <%= f.submit "Subir" %>

<% end %>


<h3>Imagenes subidas</h3>
<% @banner.each do |banner|%>
    <div>
        <%= image_tag banner.image%>
        <%= button_to 'Eliminar' dashboard_banners_path(banner), method: :delete, data: {confirm: 'Â¿Seguro de eliminar la imagen?'} %>
    </div>
<% end %>    