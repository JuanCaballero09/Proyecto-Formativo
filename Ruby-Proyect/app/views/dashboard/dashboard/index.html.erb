<h1>Panel de administración</h1>

<div class="dashboard-grid">

  <!-- Estadísticas -->
  <div class="card stat">
    <h3>Total productos</h3>
    <p><%= Product.count %></p>
  </div>

  <div class="card stat">
    <h3>Total grupos</h3>
    <p><%= Grupo.count %></p>
  </div>

  <div class="card stat">
    <h3>Último producto</h3>
    <p><%= Product.last&.nombre || "Ninguno aún" %></p>
  </div>

  <div class="card stat">
    <h3>Último grupo</h3>
    <p><%= Grupo.last&.nombre || "Ninguno aún" %></p>
  </div>

  <!-- Gráfico de barras -->
  <div class="card chart normal">
    <h3>Productos por grupo</h3>
    <canvas id="chartBarras"></canvas>
  </div>

  <!-- Gráfico tipo pie -->
  <div class="card chart normal">
    <h3>Distribución</h3>
    <canvas id="chartTorta"></canvas>
  </div>

  <!-- Gráfico de líneas -->
  <div class="card chart big">
    <h3>Crecimiento</h3>
    <canvas id="chartLineas"></canvas>
  </div>
  
</div>
